<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dark.xiaom.ringnews.activities.MainActivity">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    >


    <TextView
        android:id="@+id/tv_toolbar"
        android:textSize="34sp"
        android:textColor="@color/cardview_light_background"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />


</android.support.v7.widget.Toolbar>


    <!--<include layout="@layout/layout_news_viewpager"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--/>-->

    <FrameLayout
        android:id="@+id/fl_news_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>



    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/colorTab"
        android:elevation="4dp"
        >

        <RadioButton
            android:id="@+id/rbtn_explore"
            android:text="发现"
            android:drawableTop="@drawable/icon_explore"
            android:textColor="@color/textview"
            android:button="@null"
            android:layout_weight="1"
            android:textAlignment="center"
            android:alpha="87"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbtn_collection"
            android:text="组图"
            android:layout_weight="1"
            android:textColor="@color/textview"
            android:drawableTop="@drawable/icon_collection"
            android:button="@null"
            android:alpha="87"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbtn_setting"
            android:text="设置"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_setting"
            android:button="@null"
            android:alpha="87"
            android:textColor="@color/textview"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>







</LinearLayout>
