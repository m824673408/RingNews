<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="1dp"
    app:cardCornerRadius="1dp">

<RelativeLayout
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_no_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:alpha="87"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"

       />

    <TextView
        android:id="@+id/tv_no_pic_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/tv_no_pic"
        android:layout_marginTop="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="简讯"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_no_pic_author_name"
        android:background="@drawable/mark_background"
        android:textColor="@color/BcolorPrimary"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>

</android.support.v7.widget.CardView>